
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#e4e1dc"
                tools:context="com.cvirn.mobileapp2.survey.login.LoginActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="26dp"

        android:id="@+id/linearLayout2"
        android:gravity="top|center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_connection"
            style="@style/firstconnection"
            android:gravity="center"
            android:id="@+id/textView"/>

        <EditText

            android:singleLine="false"
            style="@style/InputText"
            android:maxLines="1"
            android:hint="SERVER"

            android:id="@+id/editServer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* example: server.com"

            android:gravity="center"
            android:id="@+id/textViewa"/>

        <EditText

            android:hint="@string/login_label"
            style="@style/InputText"
            android:id="@+id/editLogin"/>

        <EditText

            style="@style/InputText"
            android:hint="@string/pass_label"
            android:id="@+id/editPass"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/button"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2"
            style="@style/btnStyleLogin"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            />
    </LinearLayout>


    </ScrollView>




</RelativeLayout>
